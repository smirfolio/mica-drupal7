/**
 * Change a keyword into a readable string.
 *
 * @param string $str
 *   A given string to clear.
 *
 * @return string
 *   A clear string.
 */
function obiba_mica_commons_clean_string($str) {
  if (empty($str)) {
    return $str;
  }
  if (is_array($str)) {
    $nstr = array();
    foreach ($str as $k => $v) {
      $nstr[$k] = t(obiba_mica_commons_clean_string($v));
    }
    return $nstr;
  }

  return t(str_replace('_', ' ', $str));
}

